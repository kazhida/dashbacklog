<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg_root"
        >

    <ListView
            android:id="@+id/list_view"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

    <LinearLayout
            android:id="@+id/tabs"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_unselected"
            >

        <TextView
                android:id="@+id/tab_summaries"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:padding="12dp"
                android:gravity="center"
                android:text="@string/summaries"
                android:background="@color/tab_dummy_1"
                />
        <TextView
                android:id="@+id/tab_time_line"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:padding="12dp"
                android:gravity="center"
                android:text="@string/time_line"
                android:background="@color/tab_dummy_2"
                />
    </LinearLayout>

</LinearLayout>

